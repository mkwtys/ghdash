{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "react"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "extends": "standard",
  "globals": {
  },
  "rules": {
    "camelcase": "warn",
    "no-extra-semi": "error",
    "prefer-const": "error",
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "spaced-comment": "off",
    "react/jsx-uses-react": "warn",
    "react/jsx-uses-vars": "warn"
  }
}
